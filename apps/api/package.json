    "@elysiajs/swagger": "^1.2.0",
    "@mobily/ts-belt": "^3.13.1",
    "arctic": "catalog:",
    "elysia": "1.2.10",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@avelin/eslint-config": "workspace:*",
    "@avelin/prettier-config": "workspace:*",
    "@avelin/typescript-config": "workspace:*",
    "@types/bun": "^1.1.14",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
