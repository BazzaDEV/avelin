{
  "name": "@avelin/api",
  "version": "0.4.1",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:tsc": "tsc --watch",
    "lint": "tsc --noEmit && eslint . && prettier . --write",
    "build": "tsc",
    "compile": "bun build src/index.ts --compile --minify --sourcemap ./src/index.ts --outfile api"
  },
  "exports": {
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./dist/types.js"
    }
  },
  "dependencies": {
    "@avelin/auth": "workspace:*",
    "@avelin/database": "workspace:*",
    "@avelin/id": "workspace:*",
    "arctic": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@avelin/eslint-config": "workspace:*",
    "@avelin/prettier-config": "workspace:*",
    "@avelin/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
