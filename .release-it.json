{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Fixes"
          },
          {}
        ]
      }
    }
  },
  "git": {
    "tagName": "v${version}",
    "push": false,
    "commit": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false
  }
}
