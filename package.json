    "release:major": "release-it major"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.2",
    "auto-changelog": "^2.5.0",
    "prettier": "catalog:",
    "release-it": "^17.10.0",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=20"
  }
