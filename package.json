{
  "name": "avelin",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "compile": "turbo compile",
    "dev": "turbo dev --concurrency=15",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "turbo run db:push",
