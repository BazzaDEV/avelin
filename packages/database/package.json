{
  "name": "@avelin/database",
  "version": "0.6.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "dev:studio": "pnpm run db:studio",
    "lint": "tsc --noEmit && eslint . && prettier . --write",
    "build": "tsc",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:"
  },
  "devDependencies": {
    "@avelin/eslint-config": "workspace:*",
    "@avelin/prettier-config": "workspace:*",
    "@avelin/typescript-config": "workspace:*",
    "@types/node": "^20",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "prettier": "catalog:"
  }
}
